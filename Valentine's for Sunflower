<div class="container">
    <h1>Happy Valentine‚Äôs Day ‚ù§Ô∏è</h1>
    <p>Someone has a surprise waiting for her‚Ä¶</p>

    <button onclick="startMagic()">Open My Heart üíù</button>

    <div id="countdown"></div>

    <img id="ring" src="https://pngtree.com/freepng/rose-gold-engagement-ring_13078338.html" alt="Diamond Ring">

    <div id="message"></div>
</div>

<script>
function createHearts() {
    setInterval(() => {
        const heart = document.createElement("div");
        heart.className = "heart";
        heart.innerHTML = "‚ù§Ô∏è";
        heart.style.left = Math.random() * 100 + "vw";
        heart.style.fontSize = (Math.random() * 10 + 15) + "px";
        document.body.appendChild(heart);
        setTimeout(() => heart.remove(), 6000);
    }, 300);
}

function startMagic() {
    createHearts();
    let count = 3;
    const countdown = document.getElementById("countdown");
    countdown.style.display = "block";

    const interval = setInterval(() => {
        countdown.innerHTML = "Opening in " + count + "...";
        count--;
        if (count < 0) {
            clearInterval(interval);
            countdown.style.display = "none";
            showRing();
        }
    }, 1000);
}

function showRing() {
    const ring = document.getElementById("ring");
    ring.style.display = "block";
    setTimeout(typeMessage, 1200);
}

const text = "My love, you are the most beautiful chapter of my life. Every smile of yours completes me, every moment with you feels like home. I promise to love you today, tomorrow, and always. Thank you my Jaanu girl, my sunflower, and yes my forever Valentine üíï";

let index = 0;
function typeMessage() {
    const message = document.getElementById("message");
    message.style.display = "block";
    const typing = setInterval(() => {
        message.innerHTML += text.charAt(index);
        index++;
        if (index === text.length) clearInterval(typing);
    }, 40);
}
</script>

